{
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"comma-spacing": [
			"error", {
				"before": false,
				"after": true
			}
		],
		"no-trailing-spaces": [
			"error"
		],
		"space-before-blocks": [
			"error",
			"always"
		]
	}
}